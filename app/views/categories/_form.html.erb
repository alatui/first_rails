<%= render 'shared/errors', obj: @category %>


<div class="row">
  <div class="col-md-12">
    <%= form_for @category, :html => {class: 'form-horizontal', role: 'form'} do |f| %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :name %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-10 col-md-offset-2">
            <%= f.submit(@category.new_record? ? 'Create category' : 'Update category', class: 'btn btn-primary btn-large') %>
          </div>
        </div>
    <% end %>
    <div class="col-sm-4 col-md-offset-2">
      [<%= link_to 'Return to articles listing', articles_path %>]
    </div>
  </div>
</div>