<h2>Welcome to <%= @user.username %>'s page</h2>
<div class="row">
  <div class="col-md-12 text-center">
    <%= gravatar_for(@user, size: 150) %>
  </div>
</div>
<h4 class="text-center"><%= @user.username %>'s articles</h4>
<% @user_articles.each do |article| %>
  <%= render('/articles/article', {article: article}) %>
<% end %>

<%= render('/shared/pagination', {collection: @user_articles} ) %>